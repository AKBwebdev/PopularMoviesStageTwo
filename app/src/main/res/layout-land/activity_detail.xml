<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorBackground"
    tools:context="com.example.android.popularmoviesstagetwo.DetailActivity">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_movie"
            style="@style/DetailMovieImageLand"
            android:contentDescription="@string/contentdesc_movie_poster"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_movie_title"
                style="@style/DetailMovieTitle"
                tools:context="@string/app_name"/>

            <LinearLayout
                style="@style/MovieDetailLayoutHolder">

                <TextView
                    android:id="@+id/text_label_date"
                    style="@style/DetailMovieLabel"
                    android:text="@string/label_movie_date"/>

                <TextView
                    android:id="@+id/text_movie_date"
                    style="@style/DetailMovieText"
                    tools:context="@string/app_name"/>
            </LinearLayout>

            <LinearLayout
                style="@style/MovieDetailLayoutHolder">

                <TextView
                    android:id="@+id/text_label_language"
                    style="@style/DetailMovieLabel"
                    android:text="@string/label_movie_language"/>

                <TextView
                    android:id="@+id/text_movie_language"
                    style="@style/DetailMovieText"
                    tools:context="@string/app_name"/>
            </LinearLayout>

            <LinearLayout
                style="@style/MovieDetailLayoutHolder">

                <TextView
                    android:id="@+id/text_label_genre"
                    style="@style/DetailMovieLabel"
                    android:text="@string/label_movie_genre"/>

                <TextView
                    android:id="@+id/text_movie_genre"
                    style="@style/DetailMovieText"
                    tools:context="@string/app_name"/>
            </LinearLayout>

            <LinearLayout
                style="@style/MovieDetailLayoutHolder">

                <TextView
                    android:id="@+id/text_label_vote"
                    style="@style/DetailMovieLabel"
                    android:text="@string/label_movie_vote"/>

                <TextView
                    android:id="@+id/text_movie_vote"
                    style="@style/DetailMovieText"
                    tools:context="@string/app_name"/>

            </LinearLayout>

            <TextView
                android:id="@+id/text_movie_overview"
                style="@style/DetailMovieText"
                android:padding="@dimen/activity_margin"
                tools:context="@string/app_name"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>