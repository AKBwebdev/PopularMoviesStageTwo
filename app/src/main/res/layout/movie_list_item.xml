<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_movie_poster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginLeft="@dimen/poster_holder_spacing"
        android:layout_marginStart="@dimen/poster_holder_spacing"
        android:layout_marginBottom="@dimen/poster_holder_spacing"
        android:contentDescription="@string/label_movie_image"/>

</RelativeLayout>